{
  "name": "Todoist Badge",
  "version": "0.0.0",
  "description": "Display the count of Todoist tasks as a badge",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wxt || terminal-notifier -message 'wxt failed' -sound Sosumi",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "test": "vitest --run",
    "test:watch": "vitest",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "format:prettier": "prettier --check .",
    "format-fix:prettier": "prettier --list-different --write .",
    "format:biome": "biome format .",
    "format-fix:biome": "biome format --write .",
    "format": "pnpm run '/^format:.+/'",
    "format-fix": "pnpm run '/^format-fix:.+/'",
    "lint:biome": "biome lint .",
    "lint-fix:biome": "biome check --apply-unsafe .",
    "lint:unused-code": "knip",
    "lint-fix:unused-code": "knip --fix-type exports",
    "lint:eslint": "eslint --cache --report-unused-disable-directives '{entrypoints,src}/**/*.{ts,tsx}'",
    "lint-fix:eslint": "eslint --fix '{entrypoints,src}/**/*.{ts,tsx}'",
    "lint": "pnpm run '/^lint:.+/'",
    "lint-fix": "pnpm run '/^lint-fix:.+/'",
    "check:ng-word": "ls ./scripts/check-ng-words.sh && echo TODO",
    "check": "pnpm run '/^(compile$|lint$|format$|check:)/'",
    "fix": "pnpm run lint-fix && pnpm run format-fix"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.29.2",
    "camelcase-keys-deep": "^0.1.0",
    "date-fns": "^3.6.0",
    "ky": "^1.2.2",
    "markdown-to-jsx": "^7.4.7",
    "p-retry": "^6.2.0",
    "react": "18.3.0",
    "react-dom": "18.3.0",
    "react-router-dom": "^6.22.3",
    "use-async-effect": "^2.2.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.0",
    "@tailwindcss/typography": "^0.5.12",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/chrome": "^0.0.263",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "daisyui": "^4.10.1",
    "eslint": "8.56.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "knip": "^5.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "tailwind-merge": "^2.2.2",
    "tailwindcss": "^3.4.3",
    "ts-array-length": "^0.1.2",
    "typescript": "^5.3.3",
    "vitest": "^1.4.0",
    "wxt": "^0.17.0"
  }
}
