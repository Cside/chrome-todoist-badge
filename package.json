{
  "name": "Todoist Badge",
  "version": "0.0.0",
  "description": "Display the count of Todoist tasks as a badge",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wxt || terminal-notifier -message 'wxt failed' -sound Sosumi",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "test": "vitest --run",
    "test:watch": "vitest",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "format:prettier": "prettier --check .",
    "format-fix:prettier": "prettier --list-different --write .",
    "format:biome": "biome format ./entrypoints",
    "format-fix:biome": "biome format --write ./entrypoints",
    "format": "pnpm run '/^format:.+/'",
    "format-fix": "pnpm run '/^format-fix:.+/'",
    "lint:biome": "biome lint ./entrypoints",
    "lint-fix:biome": "biome check --apply-unsafe ./entrypoints",
    "lint:unused-code": "knip",
    "lint-fix:unused-code": "knip --fix-type exports",
    "lint": "pnpm run '/^lint:.+/'",
    "lint-fix": "pnpm run '/^lint-fix:.+/'",
    "check:ng-word": "./scripts/check-ng-words.sh",
    "check": "pnpm run '/^(compile$|lint$|format$|check:)/'",
    "fix": "pnpm run lint-fix && pnpm run format-fix"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.28.6",
    "date-fns": "^3.6.0",
    "ky": "^1.2.2",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "use-async-effect": "^2.2.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.1",
    "@types/chrome": "^0.0.263",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "knip": "^5.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^1.4.0",
    "wxt": "^0.17.0"
  }
}
