{
  "version": "0.0.6",
  "type": "module",
  "scripts": {
    "dev": "wxt || terminal-notifier -message 'wxt failed' -sound Sosumi",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "test": "vitest --run",
    "test:watch": "vitest",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "format:prettier": "prettier --check .",
    "format-fix:prettier": "prettier --list-different --write .",
    "format:biome": "rm vitest.config.ts.timestamp-*; biome format .",
    "format-fix:biome": "biome format --write .",
    "format": "pnpm run '/^format:.+/'",
    "format-fix": "pnpm run '/^format-fix:.+/'",
    "lint:biome": "rm vitest.config.ts.timestamp-*; biome lint .",
    "lint-fix:biome": "biome check --write --unsafe .",
    "lint:unused-code": "knip",
    "lint-fix:unused-code": "knip --fix-type exports",
    "lint:eslint": "eslint --cache --report-unused-disable-directives '{entrypoints,src,test}/**/*.{ts,tsx}'",
    "lint-fix:eslint": "eslint --fix '{entrypoints,src,test}/**/*.{ts,tsx}'",
    "lint": "pnpm run '/^lint:.+/'",
    "lint-fix": "pnpm run '/^lint-fix:.+/'",
    "check:ng-word": "./scripts/check-ng-words.sh",
    "check": "pnpm run '/^(compile$|lint$|format$|test$|check:)/'",
    "fix": "pnpm run lint-fix && pnpm run format-fix",
    "predev": "pnpm run _put-symlink",
    "prebuild": "pnpm run _put-symlink",
    "_put-symlink": "cp -f public/_locales/en/messages.json src/localizationMessages.json"
  },
  "dependencies": {
    "@oieduardorabelo/use-user-agent": "^5.0.1",
    "@sentry/integrations": "^7.113.0",
    "@sentry/react": "^7.113.0",
    "@tanstack/react-query": "^5.29.2",
    "chalk": "^5.3.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "ky": "^1.2.2",
    "lodash-es": "^4.17.21",
    "markdown-to-jsx": "^7.4.7",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "^6.22.3",
    "use-async-effect": "^2.2.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@tailwindcss/typography": "^0.5.13",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/chrome": "^0.0.287",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "daisyui": "^4.12.10",
    "eslint": "8.56.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-refresh": "^0.4.6",
    "knip": "^5.37.1",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "tailwind-merge": "^2.2.2",
    "tailwindcss": "^3.4.3",
    "ts-array-length": "^0.1.2",
    "typescript": "^5.5.4",
    "vite": "5.4.11",
    "vitest": "^2.0.5",
    "wxt": "^0.17.7"
  }
}
